    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/models/CommandParser/test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "List Global operators",
            "program": "${workspaceFolder}\\Apps\\Miner\\index.js",
            "args": [
                "-lGO"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run print Help",
            "program": "${workspaceFolder}\\Apps\\Miner\\index.js",
            "args": [
                "-h"
            ]
        }
    ]
}